{
  "name": "apt-finder",
  "version": "0.0.0",
  "private": true,
  "description": "Программа для ЭВМ",
  "author": "Dedimolya HTML Team",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/dedimolya/apt-finder.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "preinstall": "# bash ./scripts/preinstall.sh",
    "mine": "node ./miners/index.js",
    "start": "node ./server/index.js",
    "api": "node ./apps/api.js",
    "cian": "node ./apps/cian.js",
    "test": "eslint . && ava",
    "deploy": "pm2 deploy production update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "UNLICENSED",
  "homepage": "https://bitbucket.org/dedimolya/apt-finder#readme",
  "dependencies": {
    "@sentry/node": "^4.4.1",
    "body-parser": "^1.18.3",
    "canvas": "^1.6.13",
    "config": "1.x",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "flat-cache": "^2.0.1",
    "form-data": "^2.3.3",
    "get-port": "^4.1.0",
    "http-auth": "^3.2.3",
    "http-proxy": "^1.17.0",
    "http-proxy-response-rewrite": "0.0.1",
    "localtunnel": "^1.9.1",
    "lodash": "^4.17.10",
    "mongoose": "^5.3.16",
    "multi-geocoder": "0.1.x",
    "node-fetch": "^2.3.0",
    "ocrad.js": "git+https://github.com/antimatter15/ocrad.js.git",
    "promise-retry": "^1.1.1",
    "puppeteer": "^1.11.0",
    "randomstring": "^1.1.5",
    "request": "^2.85.0",
    "slimbot": "^0.8.6",
    "tempy": "^0.2.1",
    "typograf": "^6.7.4",
    "url-parse": "^1.4.4"
  },
  "devDependencies": {
    "ava": "1.0.0-rc.2",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.1",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.3"
  },
  "ava": {
    "files": "**/*.test.js",
    "babel": false,
    "compileEnhancements": false,
    "timeout": "10s"
  },
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "miners/**/*.js"
        ],
        "env": {
          "browser": true
        }
      }
    ]
  }
}
